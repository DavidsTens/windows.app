{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "outDir": "./compilate",
      "rootDir": "./",
      "esModuleInterop": true,
      "noEmit": true, 
      "strict": true,
      "baseUrl": ".", 
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "dist"
    ]
  }